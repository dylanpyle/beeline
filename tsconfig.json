{
  "compilerOptions": {
    "allowUnreachableCode": false,
    "esModuleInterop": true,
    "importHelpers": true,
    "incremental": true,
    "lib": ["es2017", "dom"],
    "module": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveSymlinks": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "es5"
  },
  "include": ["./src/**/*.ts", "./bin/**/*.ts"]
}
